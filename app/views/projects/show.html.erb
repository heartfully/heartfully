<div class="row project-show">
  <!-- Project Banner -->
  <div class="banner">
    <h3 class="text-center"><%= @project.name %></h3>
    <h4 class="text-center"><%= @project.partner %></h4>
  </div>

  <!-- Project Photos -->
  <div class='large-4 large-pull-1 medium-6 columns text-align small-12' id="project-photos">
    <div class="image-container">
      <div class="img-container" id="img-1">
        <img src="https://cdn.rawgit.com/Heartfully/registry-images/master/<%= @project.project_photo %>">
      </div>
      <div class="img-container" id="img-2">
        <img src="https://cdn.rawgit.com/Heartfully/registry-images/master/<%= @project.project_photo_2 %>">
      </div>
      <div class="img-container" id="img-3">
        <img src="https://cdn.rawgit.com/Heartfully/registry-images/master/<%= @project.project_photo_3 %>">
      </div>
    </div>
    <div class="show-for-medium-up">
      <%= raw @project.extra_content[:"Info Box"] %>
    </div>
  </div>

  <!-- Project Info -->
  <div class='large-6 large-offset-1 medium-6 medium-offset-0 small-12 columns text-align' id="project-info">
    <h3 class="text-center secondary-color">Goal: <%= number_to_currency(@project.funding_goal, precision: 0) %></h3>
    <p><%= @project.description %></p>
    <% @project.extra_content.each do |key, value| %>
      <% if( key != :"Info Box" ) %>
        <h3 class="text-center"><strong><%= key %></strong></h3>
        <div class="project-content"><%= raw value %></div>
      <% end %>
    <% end %>
  </div>
  <div class="show-for-small-only">
    <%= raw @project.extra_content[:"Info Box"] %>
  </div>
</div>

<div class="row">
  <div class="large-4 columns large-offset-4 checkout-button">
    <%= submit_tag('Select Project', {:class =>'expand  button'}) %>
  </div>
</div>