<div class='large-6 large-offset-1 columns text-align project-show'>
  <span class="polaroid">
    <%#= image_tag @project.profile_photo, :class => 'img-circle'  %>
  </span>

  <h3 class='name'><%= @project.name %></h1>

  <div>
    <strong>Organization:</strong> <a target="_blank" href="<%= @project.organization.org_url %>"><%= @project.organization.name %></a>
  </div>

  <div>
    <strong>Location:</strong> <%= @project.country %>
  </div>

  <div>
    <strong>Goal:</strong> $<%= @project.funding_goal %>
  </div>
  <br />
  <p class='description truncate'><%= @project.description %></p>
</div>

<div class='large-4 large-push-1 columns text-align project-show'>
 <div class="image-container">
  <img src="/<%= @project.project_photo %>">
  <img src="/<%= @project.project_photo_2 %>">
  <img src="/<%= @project.project_photo_3 %>">
 </div>
</div>