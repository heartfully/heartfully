<div class="row">
  <div class="small-12 columns">
    <h2>Pick Your Project!</h2>
  </div>
</div>

<% @projects.each_slice(3) do |row| %>
  <div class='row projects-list'>
    <% row.each_with_index do |project, idx|  %>

      <div class='large-4 columns project-glimpse <% if (idx % 2 == 0) %>zebra<% end %>'>

        <span class="polaroid">
          <%= image_tag project.profile_photo, :class => 'img-circle'  %>
        </span>

        <h3 class='name'><%= project.name %></h1>

        <div>
          <strong>Organization:</strong> <a target="_blank" href="<%= project.org_link %>"><%= project.org_name %></a>
        </div>

        <div>
          <strong>Location:</strong> <%= project.country %>
        </div>

        <div>
          <strong>Goal:</strong> $<%= project.fundraising_goal %>
        </div>
        <br />
        <p class='description truncate'><%= project.description %></p>

        <div class='actions row'>
          <div class="small-5 columns">
            <%= link_to "View Details", "#", :class => "button expand view-details" %>
          </div>
          <div class="small-5 columns">
            <%= link_to "Select Project", "/registry/sarah-and-jake", :class => "button expand" %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
<% end %>

<div class="row">
  <ul class="pagination small-12 columns">
    <li class="arrow unavailable"><a href="">&#9664;</a></li>
    <li class="current"><a href="">1</a></li>
    <li><a href="">2</a></li>
    <li><a href="">3</a></li>
    <li><a href="">4</a></li>
    <li class="unavailable"><a href="">&hellip;</a></li>
    <li><a href="">12</a></li>
    <li><a href="">13</a></li>
    <li class="arrow"><a href="">&#9654;</a></li>
  </ul>
</div>