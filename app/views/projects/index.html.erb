<% content_for(:page_title, "Browse Projects!") %>

<% content_for :backbone_bootstrap do %>
  <% tag(:meta, :class => "bootstrapped-json", :id => "projects-json", :data => { projects: @projects, categories: @categories }) %>
<% end %>

<% content_for :load_js do %>
  <%= javascript_include_tag('projects') %>
<% end %>

<%= javascript_tag do %>
  window.total_pages = '<%= @project_last_page %>';
<% end %>

<div class="row projects">
  <div class="columns large-12 medium-12 small-12">
    <h2 class="text-center"><span>Browse Projects</span></h2>
    <p></p>
  </div>
</div>

<div id="js-projects-list" class="row projects-list large-10 large-offset-1"></div>
