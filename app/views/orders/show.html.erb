<h2>Order confirmation</h2>

<% if @order.status.nil? %>
  <% order_summary(@order.summary).each do |item, quantity| %>
    <div><%= "#{quantity} #{item}" %></div>
  <% end %> 
  <div>total: <%= @order.total %></div>

  Please enter your information below and click checkout to finalize your order:
  <%= form_tag orders_finalize_path do %>
    <%= text_field_tag(:first_name, '', :placeholder => 'First Name') %>
    <%= text_field_tag(:last_name, '', :placeholder => 'Last Name') %>
    <%= email_field_tag(:email, '', :placeholder => 'Email') %>

    Leave a message for the couple:
    <%= text_area_tag(:message) %>
    <%= submit_tag('Checkout') %>
  <% end %>
<% else %>
  This order has been completed by <%= "#{@order.first_name} #{@order.last_name}" %>
<% end %>