      <div class="small-12 medium-12 large-4 columns">
        <%= image_tag "mufindi-large.jpg", alt: "Mufindi Village Image" %>
        <p><strong>This Project</strong> will have a brief description, found here, under the photo.</p>
        <h4><a href="#"><strong>Learn More</strong></a></h4>
      </div>
      <div class="small-12 medium-12 large-4 columns">
        <%= image_tag "solaraid-large.jpg", alt: "Three boys smiling" %>
        <p><strong>This Project</strong> will have a brief description, found here, under the photo.</p>
        <h4><a href="#"><strong>Learn More</strong></a></h4>
      </div>
      <div class="small-12 medium-12 large-4 columns">
        <%= image_tag "marissa_and_travis_project_photo.jpg", alt: "Boy practicing writing his ABC's at night in his room" %>
        <p><strong>This Project</strong> will have a brief description, found here, under the photo.</p>
        <h4><a href="#"><strong>Learn More</strong></a></h4>
      </div>
    </div>
  </div>
</section>
