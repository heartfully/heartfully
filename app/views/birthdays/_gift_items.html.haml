.c-breaker.c-breaker--small{:style => "border-top: 1px solid #ddd; border-bottom: 1px solid #ddd;"}
  .block.center.mb--small
    %svg.c-icon.c-icon--large{:title => "gifts"}
      %use{"xlink:href" => "#icon-gift"}
    - if @registry.projects.first.source_id.present?
      %h4.meta.center= gift_items_display_for(@registry)
      .test.quiet.small.mb--xl
        Your donation is tax-deductible.
    - else
      %h4.meta.center.mb--xl= gift_items_display_for(@registry)
    = react_component('RegistryItems', {registry_id: @registry.id, items: @registry.projects.first.item_types.sort{|a,b| a.price <=> b.price}})
