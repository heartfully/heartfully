<div class="test">
  <div>
    <div class="c-project-tabbed__header-modal" style='background-image: url(<%=  "#{project.photo1_url}" %>);'>
      <div class="c-project-tabbed__header--wrapper">
        <span class="c-project-tabbed__header--subtitle">PROJECT</span>
        <h2 class="c-project-tabbed__header--title"><%= project.name %></h2>
      </div>
      <div class="c-project-tabbed__header--overlay"></div>
    </div>
    <div class="c-project-tabbed__content">
      <div class="c-project-tabbed__content--overview r-flex">
        <!-- <div class="c-project-tabbed__menu-small">
          Tablet and down menu to go here
        </div> -->
        <ul class="c-project-tabbed__menu">
          <li class="c-project-tabbed__menu-item active registry_project_tab" id="tab-project-overview">
            <a>Overview</a>
          </li>
          <li class="c-project-tabbed__menu-item registry_project_tab" id="tab-project-problem-and-solution">
            <a>Problem & Solution</a>
          </li>
          <% if project.sustainability.blank? %>
            <li class="c-project-tabbed__menu-item registry_project_tab" id="tab-project-how-it-works">
              <a>How It Works</a>
            </li>
          <% else %>
            <li class="c-project-tabbed__menu-item registry_project_tab" id="tab-project-sustainability">
              <a>Sustainability</a>
            </li>
          <% end %>
        </ul>

        <div class="c-project-content" style="min-width: 52%;">
          <div class="content-project-overview c-project-tabbed__content--overview--modal-summary mb">
            <%= project.overview %>
          </div>
          <div class="content-project-problem-and-solution c-project-tabbed__content--overview--modal-summary mb" style="display: none">
            <p><%= project.problem %></p>
            <p><%= project.solution %></p>
          </div>
          <div class="content-project-how-it-works c-project-tabbed__content--overview--modal-summary mb" style="display: none">
            <% 1.upto(5) do |step| %>
            <% unless project.send("how_it_works_step#{step}").blank? %>
            <li>
              <%= project.send("how_it_works_step#{step}") %>
            </li>
            <% end %>
            <% end %>
          </div>
          <div class="content-project-why-its-import c-project-tabbed__content--overview--modal-summary mb" style="display: none">
            <%= project.importance %>
          </div>
          <div class="content-project-sustainability c-project-tabbed__content--overview--modal-summary mb" style="display: none">
            <%= project.sustainability %>
          </div>
        </div>

        <div class="c-project-tabbed__content--overview--partner">
          <h3 class="mb" style="text-transform: uppercase; color: gray; font-family: 'AvenirNextLTPro-Demi', Helvetica, Arial, sans-serif; font-size: 0.8em; letter-spacing: 0.5pt;">About This Partner</h3>
            <%= image_tag project.organization.logo_url, style: 'width: 50px; height: 50px; display: inline-block; vertical-align: middle;' %>
          <div class="block">
            <h4 class="c-project-about__partner nudge-top--small"><%= project.organization.name %></h4>
          </div>
          <ul class="c-project-about__meta">
            <li>
              <svg class="c-icon c-icon--inline" title="location">
                <use xlink:href="#icon-map"></use>
              </svg>
              <%= project.country %>
            </li>
            <li>
              <svg class="c-icon c-icon--inline" title="location">
                <use xlink:href="#icon-link"></use>
              </svg>
              <div class="truncated-url">
                <a class="c-project-about__link" href="<%= project.organization.org_url %>"><%= project.organization.org_url %></a>
              </div>
            </li>
          </ul>
        </div>
      </div>
      <div class="center">
        <%= link_to 'Select this project!'.html_safe, select_project_path(project.url_slug), class: 'c-button c-button--primary nudge-top--small'%>
      </div>
    </div>
  </div>
</div>
