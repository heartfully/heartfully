<%= form_for @registry, :html => { multipart: true, class: 'form'}  do |f| %>

  <%= render 'shared/error_messages', :obj => @registry %>

  <div class="text-field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="text-field">
    <%= f.label :url_slug %>
    <%= f.text_field :url_slug %>
  </div>

  <div class="text-field">
    <%= f.label :banner_img %>
    <%= f.text_field :banner_img %>
  </div>

  <div class="text-field">
    <%= f.label :profile_img %>
    <%= f.text_field :profile_img %>
  </div>

  <div class="text-field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="text-field">
    <%= f.label :address_1 %>
    <%= f.text_field :address_1 %>
  </div>

  <div class="text-field">
    <%= f.label :address_2 %>
    <%= f.text_field :address_2 %>
  </div>

  <div class="text-field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="text-field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="text-field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="text-field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div>
    <%= f.label :banner_image %>
    <%= f.file_field :banner_image %>
    <%= f.label :profile_image %>
    <%= f.file_field :profile_image %>
  </div>

  <div class="actions">
    <%= f.submit "#{@registry.new_record? ? "Create" : "Edit"} Registry", :class => "button" %>
  </div>
<% end %>
