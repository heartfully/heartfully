%header.c-hero.registry{:style => "height: 384px; background-image: url(#{@registry.banner_image.url});"}
  .c-hero__container{style: "top: 15%"}
    %h1.c-hero__couple= @registry.display_name
    - if @registry.event_date
      %span.c-hero__date
        — #{@registry.event_date.to_formatted_s(:long)} —
.c-circle.ma.mb{:style => "position: relative; border-radius: 50%; width: 200px; height: 200px; margin-top: -100px; box-shadow: 0px 1px 2px 2px rgba(0,0,0,0.2); background-image: url(#{@registry.profile_image})"}