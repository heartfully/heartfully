<div class="row registry-list-container medium-12 large-9">
  <h2>HELP US BUILD A HEALTHIER FUTURE FOR THE COMMUNITY OF WANGAMA</h2>
  <%#= render partial: 'purchase_form' %>
  <div class="row collapse">
    <% @registry.item_types.each do |item_type| %>
      <div class="small-12 medium-4 large-3 columns">
        <ul class="pricing-table">
          <li class="product-img-cell">
            <div class="product-img-div"><%= image_tag item_type.thumbnail_img, :class => "product-img" %></div>
          </li>
          <li class="product-name-cell">
            <p><strong><%= item_type.name %></strong><%= ": #{item_type.description}" unless item_type.description.blank? %></p>
          </li>
          <li class="product-price-cell">
            <strong><%= number_to_currency(item_type.price, :precision => 0) %></strong>
          </li>
          <% unless item_type.items.available.empty? %>
            <li class="product-avail-cell">
              <strong>Available: <%= item_type.items.available.count %></strong>
            </li>
            <li class="product-buy-cell">
              <%= number_field(item_type.name, in: 0..item_type.items.available.count) %>
            </li>
          <% else %>
            <li class="product-avail-cell">None</li>
            <li class="product-buy-cell">
              <%= number_field(item_type.name, in: 0..item_type.items.available.count, :disabled => true) %>
            </li>
          <% end %>
          <!-- <a href="#" class="button small expand">Add to Cart</a></li> -->
        </ul>
      </div>
    <% end %>

    <div class="row checkout-button">
      <!-- <a href="" class="expand button" data-reveal-id="js-thank-you-modal">All Set? Checkout!</a> -->
      <a href="" class="expand button" data-reveal-id="js-thank-you-modal">All Set? Checkout!</a>
    </div>

    <div id="js-thank-you-modal" class="reveal-modal small medium" data-reveal>
      <h2 id="thank-you">Thank You!</h2>
      <div class="row">
        <p>Thanks so much for contributing to our special day by supporting the <strong>Home-Based Care Program</strong>! We can't wait to see you at the wedding!</p>
      </div>
      <a href="#" class="close-reveal-modal">&times;</a>
    </div>

  </div>
</div>