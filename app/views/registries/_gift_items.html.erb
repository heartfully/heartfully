<div class="c-breaker c-breaker--small" style="border-top: 1px solid #ddd; border-bottom: 1px solid #ddd;">
  <div class="block center mb--small">
    <svg class="c-icon c-icon--large" title="gifts"><use xlink:href="#icon-gift"></use></svg>
    <h4 class="meta center mb--xl">Registry Gift Items</h4>
    <%= react_component('RegistryItems', {registry_id: @registry.id, items: @registry.projects.first.item_types.sort{|a,b| a.price <=> b.price}}) %>
  </div>
</div>
