%footer.c-footer
  .test.r-flex
    .c-footer__logo
      %svg.c-nav__logo{:preserveaspectratio => "xMinYMax meet", :style => "fill: white; height: 100px; margin-left: 0;", :viewbox => "0 0 275.5 71.5"}
        %use{"xlink:href" => "#icon-logo-logotype"}
    %ul.c-footer__list
      %li
        %a{:href => "/about-us"} About Us
      %li
        %a{:href => "/how-it-works"} How It Works
      %li
        %a{:href => "/our-partners"} Our Partners
      %li
        %a{:href => "mailto:info@heartful.ly"} Contact Us
    %ul.c-footer__list
      - if current_user && current_user.registry
        %li= link_to 'Manage Your Registry', registry_admin_path(current_user.registry.url_slug)
      - elsif current_user
        %li= link_to 'Create a Registry', user_path(current_user)
      - else
        %li= link_to 'Create a Registry', new_user_path, class: "launchSignupModal"
      %li= link_to 'Browse Projects', projects_path
      %li= link_to 'Press', press_path
      %li
        %a{:href => "/faq"} FAQ
      %li
        %a{:href => "http://blog.heartful.ly", :target => "_blank"} Blog
    %ul.c-footer__social
      %li
        %a{:href => "https://www.facebook.com/beheartful/?fref=nf", :target => "_blank"}
          %svg.c-icon.c-icon--white.c-icon--medium
            %use{"xlink:href" => "#icon-facebook"}
      %li
        %a{:href => "https://twitter.com/heartful_ly", :target => "_blank"}
          %svg.c-icon.c-icon--white.c-icon--medium
            %use{"xlink:href" => "#icon-twitter"}
      %li
        %a{:href => "https://www.instagram.com/heartful.ly/", :target => "_blank"}
          %svg.c-icon.c-icon--white.c-icon--medium
            %use{"xlink:href" => "#icon-instagram"}
      #mc_embed_signup.footer-form.stacked
        %form#mc-embedded-subscribe-form.validate{:action => "//heartful.us9.list-manage.com/subscribe/post?u=ba087ef985b740ee023cb4d34&id=83d8300bce", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
          #mc_embed_signup_scroll
            %label{:for => "mce-EMAIL"} Keep in touch!
            %input#mce-EMAIL.block{:name => "EMAIL", :placeholder => "Your email address", :required => "", :type => "email", :value => ""}/
            / real people should not fill this in and expect good things - do not remove this or risk form bot signups
            %div{"aria-hidden" => "true", :style => "position: absolute; left: -5000px;"}
              %input{:name => "b_ba087ef985b740ee023cb4d34_83d8300bce", :tabindex => "-1", :type => "text", :value => ""}/
            %input#mc-embedded-subscribe.c-button.c-button--primary{:name => "subscribe", :type => "submit", :value => "Subscribe"}/
  .c-footer__terms.nudge-top
    Copyright 2016 Heartful.ly. All rights reserved.
    %br/
    = link_to "Terms of Use", terms_of_use_path
    \- #{link_to "Privacy Policy", privacy_policy_path}
= render "shared/google_analytics"
= render "shared/modals"