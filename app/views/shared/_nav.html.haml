%header.c-nav.c-nav--transparent
  .c-nav__logo-wrapper
    %a{:href => "/"}
      %svg.c-nav__logo.c-nav__logo--logotype{:preserveaspectratio => "xMinYMax meet", :viewbox => "0 0 275.5 71.5"}
        %use{"xlink:href" => "#icon-logo-logotype"}
      %svg.c-nav__logo.c-nav__logo--mark{:preserveaspectratio => "xMinYMax meet", :viewbox => "0 0 135.4 135.4"}
        %use{"xlink:href" => "#icon-logo-logomark"}
  %ul.c-nav__menu
    - if current_user.system_admin
      %li.c-nav__menu-item= link_to "Admin", rails_admin_path
    %li.c-nav__menu-item= link_to "Holidays", holidays_path
    %li.c-nav__menu-item= link_to 'About Us', about_us_path
    %li.c-nav__menu-item= link_to 'How It Works', how_it_works_path
    %li.c-nav__menu-item= link_to "Browse Projects", projects_path
    %li.c-nav__menu-item
      %a{:href => "/faq"} FAQ
    %li.c-nav__menu-item.is-logged-in
      - if current_user.registry
        = link_to current_user.nav_display_name, registry_home_path(current_user.registry.url_slug)
      - else
        = link_to current_user.nav_display_name, user_path(current_user)
      %ul.c-nav__admin-menu
        - if current_user.registry
          %li.c-nav__admin-menu-item= link_to 'Settings & Admin', registry_admin_path(current_user.registry.url_slug)
          %li.c-nav__admin-menu-item= link_to 'View Registry', registry_home_path(current_user.registry.url_slug)
          %li.c-nav__admin-menu-item= link_to 'Edit Registry', edit_registry_path(current_user.registry)
        - else
          %li.c-nav__admin-menu-item= link_to 'Settings & Admin', user_path(current_user)
        %li.c-nav__admin-menu-item= link_to 'Sign Out', sign_out_path, method: 'delete'
  .c-nav__menu-indicator MENU
  %ul.c-nav__mobile-menu.inactive
    .c-nav__mobile-menu--close
      %svg.c-icon.c-icon--medium.mb
        %use{"xlink:href" => "#icon-close"}
    %li.c-nav__menu-item
      %a{:href => "/about-us"} About
    %li.c-nav__menu-item= link_to "Browse Projects", projects_path
    %li.c-nav__menu-item
      %a{:href => "/our-partners"} Our Partners
    %li.c-nav__menu-item
      %a{:href => "/faq"} FAQ
    - if current_user.registry
      %li.c-nav__menu-item= link_to 'Settings & Admin', registry_admin_path(current_user.registry.url_slug)
    - else
      %li.c-nav__menu-item= link_to 'Settings & Admin', user_path(current_user)
    %li.c-nav__menu-item= link_to 'Sign Out', sign_out_path, method: 'delete'
