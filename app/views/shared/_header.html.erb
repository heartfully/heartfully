<header class="row">
  <div class="small-10 medium-3 large-4 columns">
    <h1 id="logo"><a href="/">Heartful.ly</a></h1>
  </div>
  <div id="main-nav-container" class="small-2 medium-9 large-8 columns">
    <nav class="top-bar-section">
      <a id="menu" class="right" href="#">&#9776;</a>
    <% if signed_in?  %>
      <%= render 'shared/user_nav' %>
    <% else  %>
      <%= render 'shared/guest_nav' %>
    <% end %>
    </nav>
  </div>
</header>

<div id="flash">
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>
</div>