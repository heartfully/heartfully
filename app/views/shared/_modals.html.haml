#signupModal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type: "button", data: {dismiss: "modal"}, aria: {label: "Close"}}
          %span{aria: {hidden: "true"}} &times;
        .c-nav__logo--modal.center-block.mb
          %svg{:preserveaspectratio => "xMinYMax meet", :viewbox => "0 0 135.4 135.4"}
            %use{"xlink:href" => "#icon-logo-logomark"}
        %span.center.center-block.purple.subhed
          Celebrate your big day by making someone else's. Sign up and share the love.
      .modal-body.center.center-block
        = render 'users/modal_form'

